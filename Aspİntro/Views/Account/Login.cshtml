@model LoginVM
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";


}

<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth">
            <div class="row flex-grow">
                <div class="col-lg-4 mx-auto">
                    <div class="auth-form-light text-left p-5">
                        <div asp-validation-summary="ModelOnly"></div>
                        <form class="pt-3" method="post" asp-action="Login">
                            <div class="form-group">
                                <input asp-for="UserNameOrEmail" class="form-control form-control-lg" id="exampleInputUsername1" placeholder="Email or Username">
                                <span asp-validation-for="UserNameOrEmail" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="Password" type="password" class="form-control form-control-lg" id="exampleInputUsername1" placeholder="Password">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="text-center mt-4 font-weight-light">
                               <a asp-action="ForgotPassword" class="text-primary">Forgot Password ?</a>
                            </div>
                            <div class="mt-3">
                                <button class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" type="submit">Login</button>
                            </div>
                            <div class="text-center mt-4 font-weight-light">
                                Don't you have an account? <a asp-controller="Account" asp-action="Register" class="text-primary">Register</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>
<!-- container-scroller -->
