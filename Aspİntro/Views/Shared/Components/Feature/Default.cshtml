
@model Feature
<div class="feature mt-125">
    <div class="container">
        <div class="row align-items-end">
            <div class="col-md-6">
                <div class="feature-img">
                    <img src="~/img/@Model.Image" alt="Image">
                </div>
            </div>
            <div class="col-md-6">
                <div class="section-header">
                    <p>Our Feature</p>
                    <h2>@Model.Title</h2>
                </div>
                <p>
                    @Model.Description
                </p>
                <div class="row counters">
                    <div class="col-6">
                        <i class="fa fa-user"></i>
                        <div class="counters-text">
                            <h2 data-toggle="counter-up">@Model.label1Count</h2>
                            <p>@Model.label1</p>
                        </div>
                    </div>
                    <div class="col-6">
                        <i class="fa fa-users"></i>
                        <div class="counters-text">
                            <h2 data-toggle="counter-up">@Model.label2Count</h2>
                            <p>@Model.label2</p>
                        </div>
                    </div>
                    <div class="col-6">
                        <i class="fa fa-check"></i>
                        <div class="counters-text">
                            <h2 data-toggle="counter-up">@Model.label3Count</h2>
                            <p>@Model.label3</p>
                        </div>
                    </div>
                    <div class="col-6">
                        <i class="fa fa-running"></i>
                        <div class="counters-text">
                            <h2 data-toggle="counter-up">@Model.label4Count</h2>
                            <p>@Model.label3</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>