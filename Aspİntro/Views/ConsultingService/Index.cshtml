
@model HomeVM
@{
    ViewData["Title"] = "Service";
}

<!-- Service Start -->
<div class="service">
    <div class="container">
        <div class="section-header">
            <p>Consulting Services</p>
            <h2>Our Best Consulting Services</h2>
        </div>
        <div class="row">
            @foreach (var service in Model.ConsultingServices)
            {
                <div class="col-lg-3 col-md-6">
                    <div class="service-item">
                        <img src="~/img/@service.icon" alt="Icon">
                        <h3>@service.name</h3>
                        <p>
                            @service.description
                        </p>
                        <a href="">Read More</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- Service End -->
<!-- Feature Start -->
<div class="feature mt-125">
    <div class="container">
        <div class="row align-items-end">
            <div class="col-md-6">
                <div class="feature-img">
                    <img src="~/img/@Model.Feature.Image" alt="Image">
                </div>
            </div>
            <div class="col-md-6">
                <div class="section-header">
                    <p>Our Feature</p>
                    <h2>@Model.Feature.Title</h2>
                </div>
                <p>
                    @Model.Feature.Description
                </p>
                <div class="row counters">
                    <div class="col-6">
                        <i class="fa fa-user"></i>
                        <div class="counters-text">
                            <h2 data-toggle="counter-up">@Model.Feature.label1Count</h2>
                            <p>@Model.Feature.label1</p>
                        </div>
                    </div>
                    <div class="col-6">
                        <i class="fa fa-users"></i>
                        <div class="counters-text">
                            <h2 data-toggle="counter-up">@Model.Feature.label2Count</h2>
                            <p>@Model.Feature.label2</p>
                        </div>
                    </div>
                    <div class="col-6">
                        <i class="fa fa-check"></i>
                        <div class="counters-text">
                            <h2 data-toggle="counter-up">@Model.Feature.label3Count</h2>
                            <p>@Model.Feature.label3</p>
                        </div>
                    </div>
                    <div class="col-6">
                        <i class="fa fa-running"></i>
                        <div class="counters-text">
                            <h2 data-toggle="counter-up">@Model.Feature.label4Count</h2>
                            <p>@Model.Feature.label3</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Feature End -->