@model List<Setting>
@{
    ViewData["Title"] = "Settings";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
    int count = 1;
}


<div class="container">
    <div class="header d-flex">
        <h1>Categories</h1>
        <a class="btn btn-success btn-sm" asp-action="Create">Create Category</a>
    </div>
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Striped Table</h4>
                <p class="card-description">
                    Add class <code>.table-striped</code>
                </p>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th> #</th>
                            <th> Key</th>
                            <th> Value </th>
                            <th> Implementation</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var setting in Model)
                        {
                            <tr>
                                <td>
                                    @count
                                </td>
                                                         
                                <td>
                                    @setting.Key
                                </td>

                                <td>
                                    @setting.Value
                                </td>

                                <td>
                                    <a class="btn btn-primary" asp-action="Detail" asp-route-id="@setting.Id">Detail</a>
                                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@setting.Id">Edit</a>
                                    <form style="display:inline-block" method="post" asp-action="Delete" asp-route-id="@setting.Id">
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    </form>
                                </td>

                            </tr>
                            count++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>