@model PostCreateVM
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Default form</h4>
                    <p class="card-description"> Basic form layout </p>
                    <form class="forms-sample" method="post" asp-action="Create" enctype="multipart/form-data">
                        <div class="form-group">

                            <label asp-for="Title">Title:</label>
                            <input type="file" class="form-control" id="title" asp-for="Title">
                            <span class="text-danger" asp-validation-for="Title"></span>
                            <label asp-for="Description">Description:</label>
                            <input type="file" class="form-control" id="description" asp-for="Description">
                            <span class="text-danger" asp-validation-for="Description"></span>
                            <label asp-for="CategoryId">Categories:</label>
                            <select class="form-control" style="width:300px" asp-for="CategoryId" asp-items="@ViewBag.categories">
                            </select>
                            <span class="text-danger" asp-validation-for="Photos"></span>
                            <label asp-for="Photos">Photo:</label>
                            <input type="file" class="form-control" id="photo" asp-for="Photos">
                            <span class="text-danger" asp-validation-for="Photos"></span>
                        </div>
                        <button type="submit" class="btn btn-primary mr-2">Submit</button>
                        <button asp-action="index" class="btn btn-light">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>