@model ResetPasswordVM
@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/_Layout.cshtml";


}

<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth">
            <div class="row flex-grow">
                <div class="col-lg-4 mx-auto">
                    <div class="auth-form-light text-left p-5">
                        <div asp-validation-summary="ModelOnly"></div>
                        <form class="pt-3" method="post" asp-action="ResetPassword">

                            <div class="form-group">
                                <input asp-for="Password" class="form-control form-control-lg" id="exampleInputUsername1" placeholder="Password">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="ConfirmPassword" class="form-control form-control-lg" id="exampleInputUsername1" placeholder="Confir Password">
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                            <div class="mt-3">
                                <button class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" type="submit">Reset Password</button>
                            </div>
                            <input type="hidden" asp-for="Token" name="token" value="@Model.Token" />
                            <input type="hidden" asp-for="Email" name="email" value="@Model.Email" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>
<!-- container-scroller -->
