@model HomeVM
@{
    ViewData["Title"] = "About";
    int count = 1;
}

<!-- About Start -->
<div class="about mt-125">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <div class="about-img">
                    @foreach (var image in Model.About.Images)
                    {
                        <div class="about-img-@count">
                            <img src="~/img/@image.Image" alt="Image">
                        </div>
                        count++;
                    }

                </div>
            </div>
            <div class="col-md-6">
                <div class="section-header">
                    <p>Learn About Us</p>
                    <h2>@Model.About.Title</h2>
                </div>
                <div class="about-text">
                    <p>
                        @Model.About.Description
                    </p>

                    <a class="btn" href="">Learn More</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- About End -->
<!-- Feature Start -->
<div class="feature mt-125">
    <div class="container">
        <div class="row align-items-end">
            <div class="col-md-6">
                <div class="feature-img">
                    <img src="~/img/@Model.Feature.Image" alt="Image">
                </div>
            </div>
            <div class="col-md-6">
                <div class="section-header">
                    <p>Our Feature</p>
                    <h2>@Model.Feature.Title</h2>
                </div>
                <p>
                    @Model.Feature.Description
                </p>
                <div class="row counters">
                    <div class="col-6">
                        <i class="fa fa-user"></i>
                        <div class="counters-text">
                            <h2 data-toggle="counter-up">@Model.Feature.label1Count</h2>
                            <p>@Model.Feature.label1</p>
                        </div>
                    </div>
                    <div class="col-6">
                        <i class="fa fa-users"></i>
                        <div class="counters-text">
                            <h2 data-toggle="counter-up">@Model.Feature.label2Count</h2>
                            <p>@Model.Feature.label2</p>
                        </div>
                    </div>
                    <div class="col-6">
                        <i class="fa fa-check"></i>
                        <div class="counters-text">
                            <h2 data-toggle="counter-up">@Model.Feature.label3Count</h2>
                            <p>@Model.Feature.label3</p>
                        </div>
                    </div>
                    <div class="col-6">
                        <i class="fa fa-running"></i>
                        <div class="counters-text">
                            <h2 data-toggle="counter-up">@Model.Feature.label4Count</h2>
                            <p>@Model.Feature.label3</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
