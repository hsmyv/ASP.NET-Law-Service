@model RegisterVM
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";


}

<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth">
            <div class="row flex-grow">
                <div class="col-lg-4 mx-auto">
                    <div class="auth-form-light text-left p-5">                       
                        <div asp-validation-summary="ModelOnly"></div>
                        <form class="pt-3" method="post" asp-action="Register">
                            <div class="form-group">
                                <input asp-for="FullName" class="form-control form-control-lg" id="exampleInputUsername1" placeholder="Fullname">
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="UserName" class="form-control form-control-lg" id="exampleInputUsername1" placeholder="Username">
                                <span asp-validation-for="UserName" class="text-danger"></span>

                            </div>
                            <div class="form-group">
                                <input asp-for="Email" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Email">
                                <span asp-validation-for="Email" class="text-danger"></span>

                            </div>
                            <div class="form-group">
                                <input asp-for="Password" type="password" class="form-control form-control-lg" id="exampleInputUsername1" placeholder="Password">
                                <span asp-validation-for="Password" class="text-danger"></span>

                            </div>
                            <div class="form-group">
                                <input asp-for="ConfirmPassword" type="password" class="form-control form-control-lg" id="exampleInputUsername1" placeholder="Confirm Password">
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                            </div>
                           
                            <div class="mt-3">
                                <button class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" type="submit">SIGN UP</button>
                            </div>
                            <div class="text-center mt-4 font-weight-light">
                                Already have an account? <a href="login.html" class="text-primary">Login</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>
<!-- container-scroller -->
